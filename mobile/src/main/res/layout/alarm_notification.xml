<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">
        
        <LinearLayout
            android:id="@+id/glucose_info_layout"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentEnd="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/glucose"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:text="123"
                    android:autoSizeMinTextSize="5sp"
                    android:autoSizeStepGranularity="1sp"
                    android:autoSizeTextType="uniform"
                    android:maxLines="1"
                    android:textColor="@color/text_color"
                    android:shadowColor="@color/black"
                    android:shadowRadius="3"
                    tools:ignore="HardcodedText,NestedWeights,SpUsage" />

                <ImageView
                    android:id="@+id/trendImage"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:paddingVertical="1dp"
                    app:srcCompat="@drawable/icon_question"
                    android:contentDescription="@string/info_label_rate" />
            </LinearLayout>
            <TextView
                android:id="@+id/deltaText"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                android:text="Delta: +0.06"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/text_color"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toStartOf="@id/glucose_info_layout"
            android:layout_alignParentStart="true"
            android:gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/patient_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="Patient Name"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeMaxTextSize="30sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:maxLines="1"
                android:textColor="@color/text_color"
                android:shadowColor="@color/black"
                tools:ignore="HardcodedText,SpUsage" />
            <TextView
                android:id="@+id/alarm"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4"
                android:text="ALARM!"
                android:gravity="center_vertical"
                android:autoSizeMinTextSize="5sp"
                android:autoSizeStepGranularity="1sp"
                android:autoSizeTextType="uniform"
                android:maxLines="2"
                android:textColor="@color/text_color"
                tools:ignore="HardcodedText,SpUsage" />
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:id="@+id/snoozeText"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="Snooze"
        android:textSize="18dp"
        android:layout_marginStart="6dp"
        android:textColor="@color/text_color"
        tools:ignore="HardcodedText,SpUsage" />
    <LinearLayout
        android:id="@+id/snoozeLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/snooze_60"
            android:layout_marginStart="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="60"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="14sp"
            android:maxLines="1"
            tools:ignore="HardcodedText,SpUsage" />
        <Button
            android:id="@+id/snooze_90"
            android:layout_marginStart="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="90"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="14sp"
            android:maxLines="1"
            tools:ignore="HardcodedText,SpUsage" />
        <Button
            android:id="@+id/snooze_120"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="6dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="120"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeStepGranularity="1sp"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="14sp"
            android:maxLines="1"
            tools:ignore="HardcodedText,SpUsage" />
    </LinearLayout>
</LinearLayout>
