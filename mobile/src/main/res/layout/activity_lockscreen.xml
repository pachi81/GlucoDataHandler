<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/main_layout"
    tools:context=".notification.LockscreenActivity"
    android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:layout_weight="10"
        android:layout_width="0dp"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_marginTop="50dp"
                android:layout_height="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="4"
                        android:layout_height="0dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:orientation="vertical">
                            <LinearLayout
                                android:id="@+id/layout_glucose_trend"
                                android:layout_width="250dp"
                                android:layout_height="80dp"
                                android:gravity="center|top"
                                android:orientation="horizontal"
                                app:layout_constraintStart_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                tools:ignore="UselessParent">

                                <TextView
                                    android:id="@+id/txtBgValue"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4"
                                    android:autoSizeStepGranularity="1sp"
                                    android:autoSizeTextType="uniform"
                                    android:maxLines="1"
                                    android:text="---"
                                    android:textAlignment="viewEnd"
                                    android:textColor="#757575"
                                    android:textStyle="bold"
                                    tools:ignore="HardcodedText" />

                                <ImageView
                                    android:id="@+id/viewIcon"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="3"
                                    android:paddingVertical="2dp"
                                    android:src="@drawable/icon_question"
                                    tools:ignore="ContentDescription" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_delta_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center|top"
                                android:orientation="horizontal"
                                tools:ignore="UselessParent">
                            <TextView
                                android:id="@+id/txtTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:orientation="horizontal"
                                android:text="12:23 PM"
                                android:textAlignment="center"
                                android:textSize="25sp"
                                android:layout_marginEnd="20dp"
                                tools:ignore="HardcodedText" />
                            <TextView
                                android:id="@+id/txtDelta"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:maxLines="1"
                                android:orientation="horizontal"
                                android:text="Î” +0.06"
                                android:textAlignment="center"
                                android:textSize="25sp"
                                tools:ignore="HardcodedText" />
                        </LinearLayout>
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_weight="2"
                        android:layout_height="0dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/txtAlarm"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:autoSizeStepGranularity="1sp"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="60dp"
                            android:maxLines="1"
                            android:text="ALARM"
                            android:gravity="center"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                    </RelativeLayout>

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <com.ncorti.slidetoact.SlideToActView
                    android:id="@+id/btnDismiss"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:slider_icon="@drawable/icon_close"
                    app:outer_color="#005CCC"
                    app:inner_color="@color/white"
                    app:text_color="@color/white"
                    app:text_size="25sp"
                    app:text="@string/btn_dismiss"/>
                <Button
                    android:id="@+id/btnClose"
                    android:visibility="gone"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:backgroundTint="#005CCC"
                    android:text="@string/btn_dismiss"
                    android:textSize="25sp"
                    tools:ignore="HardcodedText,SpUsage" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/graphImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:scaleType="fitCenter"
                android:contentDescription="@string/graph"
                android:src="@drawable/icon_graph"/>

            <RelativeLayout
                android:layout_weight="10"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <LinearLayout
                    android:id="@+id/layoutSnooze"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintStart_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.ncorti.slidetoact.SlideToActView
                        android:id="@+id/btnSnooze"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:text_size="25sp"
                        app:outer_color="#005CCC"
                        app:inner_color="@color/white"
                        app:text_color="@color/white"
                        app:text="@string/snooze"/>

                    <TextView
                        android:id="@+id/txtSnooze"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:maxLines="1"
                        android:orientation="horizontal"
                        android:text="@string/snooze"
                        android:textAlignment="center"
                        android:textSize="25sp"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />


                    <LinearLayout
                        android:id="@+id/layoutSnoozeButtons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center|top"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintStart_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <Button
                            android:id="@+id/btnSnooze60"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#005CCC"
                            android:text="60"
                            tools:ignore="HardcodedText,SpUsage" />

                        <Button
                            android:id="@+id/btnSnooze90"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#005CCC"
                            android:layout_marginStart="20dp"
                            android:text="90"
                            tools:ignore="HardcodedText,SpUsage" />

                        <Button
                            android:id="@+id/btnSnooze120"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:backgroundTint="#005CCC"
                            android:layout_marginStart="20dp"
                            android:text="120"
                            tools:ignore="HardcodedText,SpUsage" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"/>

</LinearLayout>
